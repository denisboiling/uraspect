<% feedback = @feedback || Feedback.new %>

<div class="feedback_mail" id="feedback">
  <%= form_for feedback, remote: true, validate: true do |f| %>
    <div class="feedback-bg"></div>
    <div class="feedback-controls">
      <div class="field">
      <%= f.text_field :email, placeholder: t('mailer.email'),
                       class: 'input-block-level feedback-control' %>
      </div>
      <div class="field">
      <%= f.text_area :message, placeholder: t('mailer.message'), rows: 4,
                       class: 'input-block-level feedback-control contact_textarea' %>
      </div>
    </div>
    <%= f.submit t('mailer.send'), class: 'feedback-btn submit_button' %>
  <% end %>
</div>
