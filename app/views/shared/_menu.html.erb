<div class="navbar">
  <div class="navbar-inner">
    <div class="nav-collapse collapse">
      <ul class="nav top-2">
        <% Page.roots.visible.each do |page| %>
          <li>
            <% if page.children.any? %>
              <%= link_to '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown' do %>
                <%= raw(page.name) %>
                <b class='caret'></b>
              <% end %>

              <ul class="dropdown-menu">
                <% page.children.each do |child| %>
                  <li>
                    <%= link_to raw(child.name), slug_path(child) %>
                  </li>
                <% end %>
              </ul>
              <b class="caret-out"></b>
            <% else %>
              <%= link_to raw(page.name), slug_path(page) %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
